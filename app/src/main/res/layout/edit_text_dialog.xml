<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inputNameNote"
        android:layout_marginTop="30dp"
        android:hint="enter name of your note" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inputContentNote"
        android:layout_marginTop="30dp"
        android:inputType="textMultiLine"
        android:hint="enter your text content here" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/createAchievementChecker"
        android:text="create achievement checker"/>


</LinearLayout>